{
  "manifest_version": 3,
  "name": "Überwort: German - English Dictionary",
  "short_name": "Überwort",
  "version": "1.0.0",
  "author": "Nghi Hua",
  "homepage_url": "https://github.com/nghihua/ueberwort",
  "description": "Great tool for learning German. Includes links to German Grammar Wiki.",
  "icons": {
    "16": "images/ueberwort16.png",
    "48": "images/ueberwort48.png",
    "128": "images/ueberwort128.png"
  },
  "action": {
    "default_icon": "images/ueberwort48.png",
    "default_title": "Überwort German Popup Dictionary"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/jquery-3.3.1.min.js", "content.js"],
      "css": ["css/content.css"],
      "all_frames": true
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "permissions": ["contextMenus", "tabs", "offscreen", "storage"],
  "commands": {
    "_execute_browser_action": {
      "description": "Enable/Disable Überwort"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["css/*", "js/*", "images/*"],
      "matches": ["*://*/*"]
    }
  ]
}
